<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    
    tools:context="aula.calculoimc.Resultado">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="CÃ¡lculo de IMC!"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#20B"/>

    <ImageView
        android:id="@+id/ivMuitoGorda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/muitogorda"
        android:layout_centerInParent="true"
        android:clickable="false"
        android:layout_toStartOf="@+id/tvAltura"/>

    <ImageView
        android:id="@+id/ivGorda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gorda"
        android:layout_centerInParent="true"
        android:clickable="false"
        android:layout_toStartOf="@+id/tvAltura"/>

    <ImageView
        android:id="@+id/ivIdeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/magra"
        android:layout_centerInParent="true"
        android:clickable="false"
        android:layout_toStartOf="@+id/tvAltura"/>

    <ImageView
        android:id="@+id/ivMagra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/muitomagra"
        android:layout_centerInParent="true"
        android:clickable="false"
        android:layout_toStartOf="@+id/tvAltura"/>

    <TextView
        android:id="@+id/tvResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seu peso!"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#20B"
        android:layout_marginTop="400dp" />

    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="470dp"
        android:text="Recalcular"
        android:onClick="buttonClicked"/>

</RelativeLayout>